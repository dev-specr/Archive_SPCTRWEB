<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <property name="LOG_PATTERN"
            value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%X{requestId}] %logger{36} - %msg%n"/>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder><pattern>${LOG_PATTERN}</pattern></encoder>
  </appender>

  <!-- Quiet by default -->
  <root level="WARN">
    <appender-ref ref="STDOUT"/>
  </root>

  <!-- Keep our app at INFO -->
  <logger name="com.spectre" level="INFO"/>

  <!-- Production-lean logging -->
  <logger name="org.springframework" level="WARN"/>
  <logger name="org.springframework.web" level="WARN"/>
  <logger name="org.springframework.web.servlet.DispatcherServlet" level="WARN"/>
  <logger name="org.springframework.web.servlet.handler" level="WARN"/>
  <logger name="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping" level="WARN"/>
  <logger name="org.springframework.security" level="WARN"/>
  <logger name="org.hibernate" level="WARN"/>
  <logger name="org.hibernate.SQL" level="INFO"/>  <!-- or WARN if too chatty -->
  <logger name="org.springdoc" level="WARN"/>
</configuration>
