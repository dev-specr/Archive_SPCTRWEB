# ===== Database =====
DB_URL=jdbc:mysql://mysql-db:3306/website?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
DB_USERNAME=website
DB_PASSWORD=change-me

# ===== CORS =====
SECURITY_CORS_ALLOWED_ORIGINS=http://localhost:3000

# ===== JWT =====
# Secret MUST be Base64-encoded (at least 256-bit)
JWT_SECRET=BASE64_ENCODED_SECRET_HERE
JWT_EXPIRATION_MS=86400000
JWT_REFRESH_MS=604800000

# ===== Discord OAuth / Guild =====
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_GUILD_ID=
DISCORD_REDIRECT_URI=http://localhost:8080/api/auth/discord/callback

# Bot token (include the 'Bot ' prefix)
DISCORD_BOT_TOKEN=

# Optional: seed admins by Discord user IDs (comma-separated)
APP_ADMIN_IDS=

# ===== UEX (optional) =====
UEX_API_KEY=

# Logging and runtime
LOGGING_CONFIG=classpath:logback-spring.xml
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_COM_SPECTRE=INFO
SPRING_MAIN_BANNER_MODE=off

# App toggles
APP_RATELIMIT_ENABLED=false
APP_COOKIE_SECURE=false
APP_COOKIE_SAMESITE=Lax
